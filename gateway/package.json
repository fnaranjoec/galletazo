{
  "name": "gateway",
  "version": "1.0.0",
  "description": "Galletazo Gateway Server",
  "scripts": {
    "start": "npm run prod",
    "build": "npm run clean && npm run transpile && gulp && npm run viewscopy && npm run helperscopy",
    "server": "node ./dist-server/bin/www",
    "dev": "npm run build && cross-env DEBUG=static-service:* NODE_ENV=development npm run server",
    "prod": "npm run build && NODE_ENV=production npm run server",
    "transpile": "babel ./server --out-dir dist-server",
    "viewscopy": "babel ./server/views/**/*.pug --out-dir dist-server/views --copy-files",
    "helperscopy": "babel ./server/src/helpers/**/*.* --out-dir dist-server/src/helpers --copy-files",
    "clean": "rimraf dist-server && rimraf public",
    "watch-dev": "nodemon"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "events": {
      "restart": "kill-port 8000",
      "crash": "kill-port 8000"
    },
    "delay": "1500",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "keywords": [],
  "author": "Veritasoft S. A.",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@godaddy/terminus": "^4.4.1",
    "@google-cloud/storage": "^5.3.0",
    "apollo-server": "^2.19.0",
    "apollo-server-cache-memcached": "^3.1.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^2.19.0",
    "autoprefixer": "^10.0.1",
    "aws4": "^1.11.0",
    "axios": "^0.21.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "cssnano": "^4.1.10",
    "express": "^4.17.1",
    "express-useragent": "^1.0.15",
    "got": "^11.8.0",
    "graphql": "^15.5.1",
    "graphql-type-json": "^0.3.2",
    "gulp": "^4.0.2",
    "gulp-babel-minify": "^0.5.1",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-postcss": "^9.0.0",
    "gulp-replace": "^1.0.0",
    "http-errors": "^1.8.0",
    "https": "^1.0.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "node-cron": "^3.0.0",
    "nodemon": "^2.0.6",
    "npm": "^6.14.8",
    "postcss": "^8.1.4",
    "pug": "^3.0.0",
    "pump": "^3.0.0",
    "rimraf": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "kill-port": "^1.6.1"
  }
}
